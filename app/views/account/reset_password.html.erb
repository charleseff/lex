<% title "Reset Password" %>
<% if @errors and not @errors.empty? %>
  <%= render :partial => '/shared/alerts/errors', :locals => {:header => 'There were errors changing your password.', :messages => @errors} %>
<% end %>
<% form_tag do -%>
  <p>Enter your new password here:</p>
  <p><label for="password">Password</label><br/>
    <%= password_field_tag 'password', {}, :class=>'inputfield' %></p>

  <p><label for="password_confirmation">Password Confirmation</label><br/>
    <%= password_field_tag 'password_confirmation', {}, :class=>'inputfield' %></p>

  <p><%= image_submit_tag 'resetmypassword_button.gif' %></p>
<% end -%>