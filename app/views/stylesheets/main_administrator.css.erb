/* Basic header style applied to H1 element */
/* Phark Image Replacement Technique */


#Header{
  position: relative;
  margin: 0px auto 0px auto;
  padding:0px 0px 0px 0px;
  width: 690px;
  height: 100px;
  background: #124866;
}

/*-------------NAVIGATION----------------*/
#navigation {
  height: 24px;
  width: 690px;
  margin: 20px 0 0px 0px;
  padding: 0;
  position: relative;
  float: right;
}


#nav_welcome a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -23px -48px no-repeat;}
#nav_bookreports a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -112px -48px no-repeat;}
#nav_resourcecenter a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -245px -48px no-repeat;}
#nav_help a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -597px -48px no-repeat;}

#nav_welcome a.selected:link, #nav_welcome a.selected:hover, #nav_welcome a.selected:visited, #nav_welcome a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -23px -24px no-repeat;}
#nav_bookreports a.selected:link, #nav_bookreports a.selected:hover, #nav_bookreports a.selected:visited, #nav_bookreports a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -112px -24px no-repeat;}
#nav_resourcecenter a.selected:link, #nav_resourcecenter a.selected:hover, #nav_resourcecenter a.selected:visited, #nav_resourcecenter a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -245px -24px no-repeat;}
#nav_help a.selected:link, #nav_help a.selected:hover, #nav_help a.selected:visited, #nav_help a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation.gif) -597px -24px no-repeat;}

