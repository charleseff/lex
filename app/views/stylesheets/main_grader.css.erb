	margin: 0px auto 0px auto;
	padding: 0px;
	background: #ffffff;
	border-left: 10px solid #30492C;
	border-right: 10px solid #30492C;
	width: 690px; }

/* Basic header style applied to H1 element */
/* Phark Image Replacement Technique */


#Header{
	position: relative;
	margin: 0px auto 0px auto;
	padding:0px 0px 0px 0px;
	width: 690px;
	height: 100px;
	background: #30492C;
	}

/*--------------SUB NAVIGATION----------------*/
#navigation {
	background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) #124866 no-repeat;
	height: 24px;
	width: 690px;
	margin: 20px 0 0px 0px;
	padding: 0;
	position: relative;
	float: right;
	}

	#nav_help {left: 370px; width: 97px;}


#nav_welcome a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -23px -48px no-repeat;}
#nav_bookreports a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -112px -48px no-repeat;}
#nav_resourcecenter a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -245px -48px no-repeat;}
#nav_help a:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -370px -48px no-repeat;}

#nav_welcome a.selected:link, #nav_welcome a.selected:hover, #nav_welcome a.selected:visited, #nav_welcome a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -23px -24px no-repeat;}
#nav_bookreports a.selected:link, #nav_bookreports a.selected:hover, #nav_bookreports a.selected:visited, #nav_bookreports a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -112px -24px no-repeat;}
#nav_resourcecenter a.selected:link, #nav_resourcecenter a.selected:hover, #nav_resourcecenter a.selected:visited, #nav_resourcecenter a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -245px -24px no-repeat;}
#nav_help a.selected:link, #nav_help a.selected:hover, #nav_help a.selected:visited, #nav_help a.selected:visited:hover { background: url(<%= @controller.request.relative_url_root %>/images/navigation_grader.gif) -370px -24px no-repeat;}


