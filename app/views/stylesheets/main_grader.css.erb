	border: 1px solid #AAAAAA;
	font-family: Arial, verdana, sans-serif;
	font-size: 12px;
	padding: 1px;
	margin: 0;
}

.buttonbigbottomspace {
	margin: 0 0 15px 0;
}

/*-------------------Body Text-----------------------*/
	
#BodyText h1 {
	padding: 0px 0px 15px 0px;
	margin: 0;
	font-size: 16px;
	line-height: 20px;
	font-weight: bold;
	color: #000000; }

#BodyText a:link, #BodyText a:visited { color: #CC4509; text-decoration: none; cursor: pointer;}
#BodyText a:hover, #BodyText a:visited:hover { color: #30492C;text-decoration: underline; cursor: pointer; }

#BodyText p a:link, #BodyText p a:visited { color: #CC4509; text-decoration: underline; font-weight: normal; cursor: pointer;}
#BodyText p a:hover, #BodyText p a:visited:hover { color: #30492C;text-decoration: underline; font-weight: normal; cursor: pointer;}

#BodyText p a.ReportLink:link, #BodyText p a.ReportLink:visited { color: #AA690C; text-decoration: none; font-weight: bold;}
#BodyText p a.ReportLink:hover, #BodyText p a.ReportLink:visited:hover { color: #5D87A1;text-decoration: underline; font-weight: bold;}

#BodyText h6 a:link, #BodyText h6 a:visited { color: #FFCF01; text-decoration: none; font-weight: normal;}
#BodyText h6 a:hover, #BodyText h6 a:visited:hover { color: #ffffff;text-decoration: underline; font-weight: normal;}

